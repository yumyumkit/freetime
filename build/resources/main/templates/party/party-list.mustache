{{>layout/headernon}}

<h1 style="font-weight:bold; text-align:center">편하게 구하는 취미 친구</h1>
<div>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>제목</th>
            <th>작성자</th>
            <th>등록일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#parties}}
            <tr>
                <td><a href="/party/{{id}}" style="color: #000000">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/parties}}
        </tbody>
    </table>

    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="?page={{previous}}">이전</a></li>
        {{#check}}
            <li class="page-item"><a class="page-link" href="?page={{next}}">다음</a></li>
        {{/check}}
        {{^check}}
            <li class="page-item disabled"><a class="page-link" href="?page={{next}}">다음</a></li>
        {{/check}}
    </ul>
    <a href="/party/save" role="button" class="btn btn-light" style="text-align:center">개성 넘치는 모임을 만들어봐요!</a>
</div>
{{>search/partySearchForm}}
{{>layout/footer}}